{{#if restaurants}}
  {{#each restaurants}}
      <div class="restaurant-card">
          <h3>
              <a href="{{this.url}}" target="_blank">
                  {{this.name}}                    
              </a>
          </h3>
          <a href="{{this.url}}" target="_blank">
              <img src="{{this.image_url}}" alt="" />
          </a>
          <p>{{this.distance}} miles away</p>
      </div>
  {{/each}}
{{else}}
    <p>No restaurants found</p>
{{/if}}